<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/header_rl"
    android:layout_width="match_parent"
    android:layout_height="44dp"
    android:background="@color/Transparent"
    >

    <ImageView
        android:id="@+id/left_ib"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:background="@color/Transparent"
        android:contentDescription="@string/app_name"
        android:paddingBottom="6dp"
        android:paddingLeft="8dp"
        android:paddingRight="8dp"
        android:paddingTop="6dp"
        android:src="@drawable/logo_sbi_100x100_white" />
     
    <ImageButton
        android:id="@+id/left_extra_ib"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_toRightOf="@id/left_ib"
        android:background="@color/Transparent"
        android:contentDescription="@string/app_name"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:visibility="visible" />
   
    <TextView
        android:id="@+id/title_tv"
        style="@style/Wrap.Text.DarkGrey"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:layout_toLeftOf="@+id/right_ib"
        android:layout_toRightOf="@id/left_ib"
        android:gravity="center"
        android:singleLine="true"
        android:text="@string/app_name"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/right_tv"
        style="@style/Wrap.Text.DarkGrey"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:gravity="center"
        android:paddingRight="6dp"
        android:visibility="gone"
        android:text="@string/app_name"
         />

    <ImageView
        android:id="@+id/right_extra_ib"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/right_ib"
        android:background="@color/Transparent"
        android:contentDescription="@string/app_name"
        android:padding="10dp"
        
        android:src="@drawable/icon_search_white"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/right_ib"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:background="@color/Transparent"
        android:contentDescription="@string/app_name"
        android:visibility="invisible"
        android:paddingBottom="9dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="9dp"
        android:src="@drawable/icon_menu_white" />

    
    <!-- <View
	    android:layout_width="match_parent"
	    android:layout_height="1dp"
	    android:background="@color/seperator" /> -->
    
</RelativeLayout>