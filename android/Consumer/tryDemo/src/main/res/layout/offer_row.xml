<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp" >

        <ImageView
            android:id="@+id/categoryImgView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="0dp"
            android:src="@drawable/icon_category_clothing" />

        <TextView
            android:id="@+id/mrNameTv"
            style="@style/Wrap.MidTextGrey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/categoryImgView"
            android:layout_toRightOf="@id/categoryImgView"
            android:layout_marginTop="0dp"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingStart="10dp"
            android:text="Arego Tea"
            android:textColor="#999999"
            android:textSize="13sp" />

        <TextView
            android:id="@+id/offerTitleTv"
            style="@style/Wrap.Text.TintBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/mrNameTv"
            android:layout_alignStart="@+id/mrNameTv"
            android:layout_below="@+id/mrNameTv"
            android:layout_toLeftOf="@+id/distanceLL"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingStart="10dp"
            android:layout_marginTop="5dp"
            android:text="50% Off"
            android:textColor="@color/offerTextHeighlight"
            android:textSize="17sp" />
        
        <TextView
            android:id="@+id/offerExpireTv"
            style="@style/Wrap.SmallText.LiteGrey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/mrNameTv"
            android:layout_alignStart="@+id/mrNameTv"
            android:layout_below="@+id/offerTitleTv"
            android:paddingEnd="10dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingStart="10dp"
            android:textStyle="italic"
            android:layout_marginTop="5dp"
            android:text="Expires 13 Aug"
            android:textSize="11sp" />

        <LinearLayout
            android:id="@+id/distanceLL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="20dp"
            android:orientation="vertical" >
            
            <TextView
            android:id="@+id/distanceTv"
            style="@style/Wrap.LargeTextGrey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@string/light_font_family"
            android:text="0.7"
            android:textSize="20sp" />
            
            <TextView
            
            style="@style/Wrap.SmallText.LiteGrey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="km"
            android:layout_gravity="center"
            android:textSize="11sp" />
            
        </LinearLayout>
        
    </RelativeLayout>

</LinearLayout>